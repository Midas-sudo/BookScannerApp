#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import colours helper.colours

<ProjectCard>
    newPath: new_path
    pageNumber: book_page_number
    chapNumber: book_chap_number 
    adaptive_height: True 
    size_hint: 1, None  
    style: "elevated"
    pos_hint: {"center_x": .5, "center_y": .5}
    radius:  [dp(12), dp(12), dp(12), dp(12)]
    md_bg_color: 0, 0, 0, 0
    MDBoxLayout:
        size_hint: None, None
        size: root.size
        orientation: "vertical"
        padding:15
        MDLabel:
            id: label
            text_size: root.width, None
            size: self.texture_size
            font_size: "25px"
            text: root.text
            adaptive_size: True
            color: colours["White"]
            #pos: 12, root.height-self.height-12
        TextField:
            id: book_name
            hint_text:"Book Name"
        Double_Container:
            spacing: 10
            TextField:
                id: book_page_number
                hint_text:"Book Page Number"
            TextField:
                id: book_chap_number
                hint_text:"Book Chapter Number"

        Double_Container:
            TextField:
                id: new_path
                hint_text: "New Project Folder"
                helper_text: "The folder path needs to be absolute"
                helper_text_mode: "on_focus"

            MDIconButton:
                icon_size: "24sp"
                icon: "folder"
                on_press: root.open_project()
        MDRectangleFlatButton:
            text_color: colours["White"]
            line_color: colours["Secondary"]
            text: "Finish"
            size_hint_x: None
            on_press: root.toMain()
            

<NewProject>:    
    box: card_box
    outerBox: container
    MDFloatLayout:
        size_hint: None, None
        size: root.size
        id: container
        orientation: 'vertical'
        FitImage:
            source: "images/bg.png"
        MDBoxLayout:
            id: card_box
            adaptive_size: True 
            size:  root.width*0.4, root.height
            pos_hint: {"center_x": .5, "center_y": .5}
            ProjectCard:
                text:"Book Scanning - Projects"

<NewProjectScreen>:
    NewProject:
